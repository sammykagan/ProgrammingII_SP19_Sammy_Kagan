<CustBoxLayout@BoxLayout>:
    size_hint_y: 1
    spacing: 2

<CustButton@Button>:
    font_size: 30
    background_normal: ""
    background_down:
    background_color: 0.85, 0.85, 0.85, 1
    color: 0,0,0,1 # text color (foreground)

<OrangeButton@CustButton>:
    background_color: 1, 0.5, 0, 1
    color: 1,1,1,1


<CalculatorLayout>:
    display: display
    orientation: "vertical"
    spacing: 1



    TextInput:
        id: display
        font_size: 60
        background_normal: ""
        background_color: 0.5, 0.5, 0.5, 1

    CustBoxLayout:
        CustButton:
            text: "AC"
            on_press: display.text = ""
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "("
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: ")"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        OrangeButton:
            text: "/"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"

    CustBoxLayout:
        CustButton:
            text: "7"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "8"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "9"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        OrangeButton:
            text: "*"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"

    CustBoxLayout:
        CustButton:
            text: "4"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "5"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "6"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        OrangeButton:
            text: "-"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"

    CustBoxLayout:
        CustButton:
            text: "1"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "2"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "3"
            on_press: root.equal_check()
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        OrangeButton:
            text: "+"
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"

    CustBoxLayout:
        CustButton:
            text: "0"
            size_hint_x: 2
            spacing: 3
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        CustButton:
            text: "."
            on_press: display.text += self.text
            font_name: "Comic Sans MS Copy"
        OrangeButton:
            text: "="
            font_name: "Comic Sans MS Copy"
            on_press: root.calculate(display.text)
            on_press: root.equal_sign()

