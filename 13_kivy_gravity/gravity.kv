<CustBoxLayout@BoxLayout>:
    size_hint_y: 1
    spacing: 2

<CustButton@Button>:
    font_size: 30
    background_color: 0,0,0,1
    color: 0,0,0,1 # text color (foreground)

<GravityLayout>:
    orientation: "vertical"
    spacing: 1
    id: gravity
    answer: _answer
    m1: _m1
    m2: _m2
    radius: _radius

    Label:
        text: "GRAVITY CALCULATOR"
        font_size: 60
        font_name: "Charter copy"
        color: [255/256, 204/256, 255/256, 1] # rbga
        bold: "True"
        background_color: 0.85, 0.85, 0.85, 1

    BoxLayout:

        Label:
            text: "Mass 1 (kg)"
            font_size: 35
            font_name: "Charter copy"
            background_normal: ""
            background_color: 0.5, 0.5, 0.5
            spacing: 10
            color: [255/256, 204/256, 255/256, 1] # rbga
            bold: "True"

        Label:
            text: "Mass 2 (kg)"
            font_size: 35
            font_name: "Charter copy"
            color: [255/256, 204/256, 255/256, 1] # rbga
            bold: "True"

        Label:
            text: "Radius (m)"
            font_size: 35
            font_name: "Charter copy"
            color: [255/256, 204/256, 255/256, 1] # rbga
            bold: "True"

    BoxLayout:

        TextInput:
            id: display
            font_size: 60
            input_filter: "float"
            background_color: 0.5, 0.5, 0.5, 1
            id: _m1

        TextInput:
            id: display
            font_size: 60
            input_filter: "float"
            background_color: 0.5, 0.5, 0.5, 1
            id: _m2

        TextInput:
            id: display
            font_size: 60
            input_filter: "float"
            background_color: 0.5, 0.5, 0.5, 1
            id: _radius


    BoxLayout:

        Button:
            text: "Calculate force of gravity"
            font_size: 35
            font_name: "Charter copy"
            color: [255/256, 204/256, 255/256, 1] # rbga
            bold: "True"
            on_press: gravity.ugc()

        Label:
            text: "Gravity"
            font_name: "Charter copy"
            font_size: 40
            color: [255/256, 0/256, 127/256, 1] # rbga
            id: _answer
